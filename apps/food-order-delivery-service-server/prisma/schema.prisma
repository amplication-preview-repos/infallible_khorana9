datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vehicle {
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  licensePlate String?
  makeModel    String?
  updatedAt    DateTime @updatedAt
  user         User?    @relation(fields: [userId], references: [id])
  userId       String?
}

model Order {
  contactNumber         String?
  createdAt             DateTime         @default(now())
  customerName          String?
  deadline              DateTime?
  deliveryAddress       String?
  deliveryPerson        String?
  estimatedDeliveryTime DateTime?
  id                    String           @id @default(cuid())
  orderHistories        OrderHistory[]
  orderItems            Json?
  orderNumber           String?
  specialInstructions   String?
  status                EnumOrderStatus?
  updatedAt             DateTime         @updatedAt
}

model Notification {
  createdAt DateTime                   @default(now())
  id        String                     @id @default(cuid())
  message   String?
  status    EnumNotificationStatus?
  typeField EnumNotificationTypeField?
  updatedAt DateTime                   @updatedAt
  user      User?                      @relation(fields: [userId], references: [id])
  userId    String?
}

model OrderHistory {
  createdAt                DateTime @default(now())
  deliveryExperienceRating Int?
  id                       String   @id @default(cuid())
  order                    Order?   @relation(fields: [orderId], references: [id])
  orderId                  String?
  updatedAt                DateTime @updatedAt
}

model User {
  createdAt      DateTime       @default(now())
  email          String?        @unique
  firstName      String?
  id             String         @id @default(cuid())
  lastName       String?
  name           String?
  notifications  Notification[]
  password       String
  phoneNumber    String?
  profilePicture Json?
  roles          Json
  updatedAt      DateTime       @updatedAt
  username       String         @unique
  vehicles       Vehicle[]
}

enum EnumOrderStatus {
  Option1
}

enum EnumNotificationStatus {
  Option1
}

enum EnumNotificationTypeField {
  Option1
}
